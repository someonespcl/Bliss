<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:paddingEnd="15dp"
     android:orientation="vertical"
     android:paddingBottom="10dp"
     android:paddingStart="15dp"
     android:paddingTop="10dp"
     tools:context=".activities.EditProfileActivity">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center_horizontal"
         android:orientation="vertical">

        <ImageView
             android:layout_height="150dp"
             android:layout_width="150dp"
             android:src="@drawable/profile_image" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal">

            <Button
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:background="@drawable/intrests_background_button"
                 app:backgroundTint="#1Affffff"
                 android:elevation="8dp"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_medium"
                 android:textAllCaps="false"
                 android:textColor="@android:color/white"
                 android:drawableRight="@drawable/edit_icon"
                 android:text="Change Image" />

            <ImageButton
                 android:layout_height="match_parent"
                 android:layout_width="48dp"
                 android:src="@drawable/camera_icon"
                 android:background="@drawable/icon_background_button"
                 android:layout_marginLeft="8dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:scrollbars="none"
         android:fadingEdge="vertical"
         android:fadingEdgeLength="24dp"
         android:layout_marginTop="5dp"
         android:overScrollMode="never">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical">

            <TextView
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:fontFamily="@font/poppins_bold"
                 android:textSize="20sp"
                 android:layout_marginLeft="8dp"
                 android:textColor="@android:color/white"
                 android:text="User Information" />

            <EditText
                 android:layout_height="48dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/edit_text_background"
                 android:hint="Username"
                 android:elevation="8dp"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="10dp"
                 android:paddingHorizontal="12dp"
                 android:inputType="textPersonName" />

            <EditText
                 android:layout_height="50dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/edit_text_background"
                 android:hint="Phonenumber"
                 android:elevation="8dp"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="10dp"
                 android:paddingHorizontal="12dp"
                 android:inputType="phone" />

            <EditText
                 android:layout_height="48dp"
                 android:layout_width="match_parent"
                 android:background="@drawable/edit_text_background"
                 android:hint="bliss@gmail.com"
                 android:elevation="8dp"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:textColor="@android:color/white"
                 android:layout_marginTop="10dp"
                 android:paddingHorizontal="12dp"
                 android:inputType="textEmailAddress" />

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:drawablePadding="4dp"
                 android:elevation="8dp"
                 android:textColor="#FFC100"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/edit_text_background"
                 android:hint="*******"
                 android:includeFontPadding="false"
                 android:fontFamily="@font/poppins_regular"
                 android:backgroundTint="@null"
                 android:paddingHorizontal="12dp"
                 android:inputType="textPassword" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>